extends ../layout

block content
	.page-header
		h3 find your friends
	form(method='POST')
		input(type='hidden', name='_csrf', value=_csrf)
		.form-group
			label.control-label(for='name') Name
			input.form-control(type='text', name='name', id='name', placeholder='Your friend\'s name', autofocus=true)
			| &nbsp;button.btn.btn-primary(type='submit')
				i.fa.fa-search
				| Search
	div.row
		for usr in usrs
			div.col-sm-4.col-md-2
				div.thumbnail
					if usr.profile.picture
						img(src='#{usr.profile.picture}')
					else
						img(src='#{usr.gravatar(100)}')
					div.caption
						h4 #{usr.profile.name || usr.email || usr.id}
					a.btn.btn-success(href='/findfriends/add/#{usr.id}')
						i.fa.fa-user-plus
						| Add as a friend