extends ../layout

block content
	.page-header
		h3 find your friends
	form.form-horizontal(action='/friends/search', method='POST')
		input(type='hidden', name='_csrf', value=_csrf)
		.form-group
			label.col-sm-2.control-label(for='name') Name
			.col-sm-4
				input.form-control(type='text', name='name', id='name', placeholder='Your friend\'s name')
		.form-group
			.col-sm-offset-2.col-sm-4
				button.btn.btn.btn-primary(type='submit')
					i.fa.fa-search
					| Search
	div.row
		for usr in usrs.pending
			div.col-sm-4.col-md-2
				div.thumbnail
					if usr.friends.profile.picture
						img(src='#{usr.friends.profile.picture}')
					else
						img(src='#{usr.friends.gravatar(100)}')
					div.caption
						h4 #{usr.friends.profile.name || usr.friends.email || usr.friends.id}
					a.btn.btn-success(href='/friends/add/#{usr.friends.id}')
						i.fa.fa-user-plus
						| Confirm
	div.row
		for usr in usrs.requested
			div.col-sm-4.col-md-2
				div.thumbnail
					if usr.friends.profile.picture
						img(src='#{usr.friends.profile.picture}')
					else
						img(src='#{usr.friends.gravatar(100)}')
					div.caption
						h4 #{usr.friends.profile.name || usr.friends.email || usr.friends.id}
					a.btn.btn-success(href='/friends/add/#{usr.friends.id}')
						i.fa.fa-user-plus
						| Add as a friend
	div.row
		for usr in usrs.accepted
			div.col-sm-4.col-md-2
				div.thumbnail
					if usr.friends.profile.picture
						img(src='#{usr.friends.profile.picture}')
					else
						img(src='#{usr.friends.gravatar(100)}')
					div.caption
						h4 #{usr.friends.profile.name || usr.friends.email || usr.friends.id}
					a.btn.btn-success(href='/friends/add/#{usr.friends.id}')
						i.fa.fa-user-plus
						| Add as a friend