extends ../layout

block content
	.page-header
		h3  #{user.profile.name || user.email || user.id}'s friends
	div.row
		for friend in friends
			div.col-sm-4.col-md-2
				div.thumbnail
					if friend.friend.profile.picture
						img(src='#{friend.friend.profile.picture}')
					else
						img(src='#{friend.friend.gravatar(100)}')
					div.caption
						h4 #{friend.friend.profile.name || friend.friend.email || friend.friend.id}
					a.btn.btn-primary(href='/findfriends/add/#{friend.friend.id}')
						i.fa.fa-gift
						| Browse Wants
	.row
		for friend in friends
			.col-sm-4
				a(href='/api/github', style='color: #fff')
					.panel.panel-default(style='background-color: #000')
						.panel-body
							img(src='http://i.imgur.com/2AaBlpf.png', height=40)
							|  GitHub