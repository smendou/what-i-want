.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-gift
        | What I Want
    .collapse.navbar-collapse
      .navbar-form.navbar-left
        .input-group.input-group-sm(style='max-width:360px')
          input.form-control(type='text', name='name', id='name', placeholder='Your friend\'s name')
          button.btn.btn.btn-primary(type='submit')
            i.fa.fa-search
      ul.nav.navbar-nav
        if !user
          li(class=title=='Home'?'active':undefined)
            a(href='/') Home
          li(class=title=='Contact'?'active':undefined)
            a(href='/contact') Contact
        else
          li.dropdown(class=title=='Friends'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown') Friends
            ul.dropdown-menu
              li
                a(href='/friends/accepted') Accepted
              li.divider
              li
                a(href='/friends/requested') Requested
              li.divider
              li
                a(href='/friends/pending') Pending
              li.divider
              li
                a(href='/friends/search') Search
          li(class=title=='My Wants'?'active':undefined)
            a(href='/mywants') My Wants
          li(class=title=='Wall of Wants'?'active':undefined)
            a(href='/wallofwants') Wall of Wants
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=title=='Login'?'active':undefined)
            a(href='/login') Login
          li(class=title=='Signup'?'active':undefined)
            a(href='/signup') Signup
        else
          li.dropdown(class=title=='Account Management'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src='#{user.profile.picture}')
              else
                img(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/logout') Logout