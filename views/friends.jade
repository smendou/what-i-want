extends layout

block content
	.row
		if usrs.pending
			.col-md-6
				.panel.panel-default
					.panel-heading
						h4 Pending requests
					.panel-body
						ul.list-group
							for usr in usrs.pending
								li.list-group-item
									if usr.friend.profile.picture
										img.img-circle(src='#{usr.friend.profile.picture}')
									else
										img.img-circle(src='#{usr.friend.gravatar(70)}')
									| #{usr.friend.profile.name || usr.friend.email || usr.friend.id}
									a.btn.btn-info.pull-right(href='/addfriend/#{usr.friend.id}')
										|Accept
		if usrs.requested
			.col-md-6
				.panel.panel-default
					.panel-heading
						h4 Requested friends
					.panel-body
						.list-group
							for usr in usrs.requested
								.list-group-item
									if usr.friend.profile.picture
										img.img-circle(src='#{usr.friend.profile.picture}')
									else
										img.img-circle(src='#{usr.friend.gravatar(70)}')
									| #{usr.friend.profile.name || usr.friend.email || usr.friend.id}
		if usrs.accepted
			.col-md-6
				.panel.panel-default
					.panel-heading
						h4 Friends
					.panel-body
						ul.list-group
							for usr in usrs.accepted
								li.list-group-item
									if usr.friend.profile.picture
										img.img-circle(src='#{usr.friend.profile.picture}')
									else
										img.img-circle(src='#{usr.friend.gravatar(70)}')
									| #{usr.friend.profile.name || usr.friend.email || usr.friend.id}
									a.btn.btn-default.pull-right(href='/mywants/#{usr.friend.id}')
										|Wants
									a.btn.btn-danger.pull-right(href='/removefriend/#{usr.friend.id}')
										|Remove