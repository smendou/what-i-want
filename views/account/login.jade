extends ../layout

block content
  .row
    .col-sm-6.col-sm-offset-3.text-center  
      .panel.panel-default
        .panel-heading
          h4
            i.fa.fa-gift
            | What I Want
        .panel-body
          form(method='POST')
            input(type='hidden', name='_csrf', value=_csrf)
            .form-group
              label.control-label(for='email') Email
              input.form-control(type='email', name='email', id='email', placeholder='Email')
            .form-group
              label.control-label(for='password') Password
              input.form-control(type='password', name='password', id='password', placeholder='Password')
            .form-group
              button.btn.btn-success(type='submit')
                i.fa.fa-user
                | Login
            .form-group
              a.btn.btn-link(href='/forgot') Forgot your password?
          hr
          h5 Or connect with :
          ul.social-icons.icon-circle.icon-zoom.list-unstyled.list-inline
            li
              a(href='/auth/facebook')
                i.fa.fa-facebook
            li
              a(href='/auth/twitter')
                i.fa.fa-twitter
            li
              a(href='/auth/google')
                i.fa.fa-google-plus
            li
              a(href='/auth/instagram')
                i.fa.fa-instagram